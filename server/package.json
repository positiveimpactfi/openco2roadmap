{
  "name": "server",
  "version": "0.0.1",
  "description": "Open CO2 roadmap backend",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon -L src/index.ts | pino-pretty",
    "build": "tsc",
    "typeorm": "NODE_ENV=migration ts-node --transpile-only ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "db:seed": "ts-node src/seed/seedAll.ts",
    "db:drop": "ts-node src/dropDb.ts",
    "db:reset": "yarn db:drop && yarn db:seed"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.16",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/express-session": "^1.17.3",
    "@types/ioredis": "^4.26.4",
    "@types/node": "^16.7.10",
    "@types/uuid": "^8.3.1",
    "nodemon": "^2.0.7",
    "pino-pretty": "^7.3.0",
    "ts-node": "10.2.1",
    "typescript": "^4.4"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "argon2": "^0.27.2",
    "connect-redis": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "graphql": "^15.5.3",
    "ioredis": "^4.27.3",
    "pg": "^8.4.0",
    "pino-http": "^6.4.0",
    "pino-tee": "^0.3.0",
    "reflect-metadata": "^0.1.10",
    "type-graphql": "^1.1.1",
    "typeorm": "0.2.32",
    "uuid": "^8.3.2",
    "zod": "^3.8.2"
  }
}
