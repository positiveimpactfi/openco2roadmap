{
  "name": "server",
  "version": "0.0.1",
  "description": "Open CO2 roadmap backend",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon -L src/index.ts | pino-pretty -c",
    "build": "tsc",
    "typeorm": "NODE_ENV=migration ts-node --transpile-only ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "db:seed": "ts-node src/seed/seedAll.ts",
    "db:drop": "ts-node src/dropDb.ts",
    "db:reset": "yarn db:drop && yarn db:seed",
    "print:log:errors": "cat logs/error.log | pino-pretty -c -t",
    "print:log:info": "cat logs/info.log | pino-pretty -c -t"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.16",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/express-session": "^1.17.3",
    "@types/ioredis": "^4.28.7",
    "@types/node": "^17.0.12",
    "@types/uuid": "^8.3.4",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.1",
    "ts-node": "10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.0",
    "apollo-server-core": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "argon2": "^0.28.3",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^14.3.2",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "graphql": "^15.5.3",
    "ioredis": "^4.28.3",
    "node-fetch": "2",
    "pg": "^8.4.0",
    "pino": "^7.6.4",
    "pino-http": "^6.6.0",
    "pino-tee": "^0.3.0",
    "reflect-metadata": "^0.1.10",
    "type-graphql": "^1.1.1",
    "typeorm": "0.2.41",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  }
}
